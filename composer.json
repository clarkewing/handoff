{
    "name": "clarkewing/handoff",
    "description": "Lightweight Laravel package for secure cross-application user handoff via signed URLs and route mapping.",
    "keywords": [
        "php",
        "clarkewing",
        "laravel",
        "handoff"
    ],
    "homepage": "https://github.com/clarkewing/handoff",
    "license": "MIT",
    "authors": [
        {
            "name": "Hugo Clarke-Wing",
            "email": "7689302+clarkewing@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/auth": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/routing": "^8.0|^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.34|^3.7",
        "pestphp/pest-plugin-laravel": "^1.1|^2.3|^3.1",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "ClarkeWing\\Handoff\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClarkeWing\\Handoff\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "pint -v --parallel",
        "test:lint": "pint --test -v --parallel",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:type-coverage",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ClarkeWing\\Handoff\\HandoffServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
